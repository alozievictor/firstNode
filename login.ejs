<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h2 class="text-center mb-3"><i class="fa-solid fa-right-to-bracket"></i>Login</h2>
            <%- include("./partials/message") %>
            <form action="/users/login" method="POST">
                <div class="form-group ">
                    <label for="Email">Email</label>
                    <input type="text" name="email" id="email" class="form-control" placeholder="Enter Your Email" value="<% typeof email !='undefined' ? email : '' %> ">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" name="password" id="password" class="form-control" placeholder="Enter Password" value="<% typeof email !='undefined' ? password : '' %> ">
                </div>
                <button type="submit" class="btn btn-danger btn-block mt-3">Login</button>
            </form>
            <small class="lead mt-4">Don't You Have An Account? <a href="/users/register">Register</a></small>
        </div>
    </div>
</div>