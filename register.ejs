<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h2 class="text-center mb-3"><i class="fas fa-user-plus"></i>Register</h2>
            <%- include("./partials/message") %>
            <form action="/users/register" method="POST">
                <hr>
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" id="name" name="name" class="form control" placeholder="Enter Your Name" value="<% typeof name != 'undefined' ? name : '' %> ">
                </div>
                <div class="form-group ">
                    <label for="Email">Email</label>
                    <input type="email" name="email" id="email" class="form-control" placeholder="Enter Your Email" value="<% typeof email !='undefined' ? email : '' %> ">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" name="password" id="password" class="form-control" placeholder="Enter Password" value="<% typeof email !='undefined' ? password : '' %> ">
                </div>
                <div class="form-group">
                    <label for="password">Confirm Password</label>
                    <input type="password" name="password2" id="password2" class="form-control" placeholder="Confirm Password" value="<% typeof email !='undefined' ? password2 : '' %> ">
                </div>
                <button type="submit" class="btn btn-success btn-block mt-3">Register</button>
            </form>
            <small class="lead mt-4" style="font-size:14px;">Do You Have An Account? <a href="/users/login">Login</a></small>
        </div>
    </div>
</div>